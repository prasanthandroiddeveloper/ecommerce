<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragment.FinalOrder">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Order Summary"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@color/color_bitter"/>


    <ImageView
        android:id="@+id/successImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/success"
        android:layout_gravity="center"/>

    <com.naestech.prasanth.myhita.customfonts.MyTextViewSansBold
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Thank You"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/timecolor"
        android:textSize="18sp"/>

    <com.naestech.prasanth.myhita.customfonts.MyTextViewSansBold
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Order Placed SuccessFully"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/timecolor"
        android:textSize="18sp"/>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:layout_margin="@dimen/margin_2dp"
        app:cardElevation="@dimen/margin_5dp"
        app:cardCornerRadius="@dimen/margin_5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_2dp"
        android:orientation="horizontal" >


    <TextView


        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Your Order Id is"
        android:background="@color/divider"
        android:gravity="center"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_weight="1"/>


    <TextView
        android:id="@+id/orderTv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="start|center"
        android:textSize="18sp"
        android:padding="@dimen/margin_10dp"
        android:textColor="#000"
        android:layout_gravity="center"
        android:text="@string/hello_blank_fragment" />

</LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_2dp"
                android:orientation="horizontal" >


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="Payment Method"
                    android:background="@color/divider"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:layout_weight="1"/>


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:textSize="18sp"
                    android:padding="@dimen/margin_10dp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:text="Cash On Delivery" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_2dp"
                android:orientation="horizontal" >


                <TextView

                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="Total Amount"
                    android:background="@color/divider"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:layout_weight="1"/>


                <TextView
                    android:id="@+id/amount_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:textSize="18sp"
                    android:padding="@dimen/margin_10dp"
                    android:textColor="#000"
                    android:layout_gravity="center"
                    android:text="Cash On Delivery" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/webviewr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>